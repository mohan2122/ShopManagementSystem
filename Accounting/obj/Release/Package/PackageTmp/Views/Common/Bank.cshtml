@model Repository.Bank
@{
    ViewBag.Title = "Bank";
}

<script src="~/Scripts/ApplicationJS/Common/Bank.js"></script>

@using (@Html.BeginForm())
{    <div class="FormName">Bank</div>
    <div class="MainDiv">
        <div class="LeftPart">
            @Html.HiddenFor(m => m.BankID)
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.CompanyID, "Company Name")
                </div>
                <div class="RightColumnDdl">
                    @Html.DropDownListFor(m => m.CompanyID, (SelectList)ViewData["VdCompanyList"], "        --Choose Company--        ")
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.BankName, "Bank Name")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.BankName, new { @class = "required" })
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.Note)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Note)
                </div>
            </div>
           <div class="CustombuttonOnePart">
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Save" id="btnSave" />
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Update" id="btnUpdate" />
            </div>
            <div>
                <table id="tblBank"></table>
                <div id="BankPager"></div>
            </div>
        </div>
    </div>
}
