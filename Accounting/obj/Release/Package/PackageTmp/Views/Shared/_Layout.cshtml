    <script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>

</head>
<body>
    @* <header>
        <div style="height: 75px; background-color: #000000;">
        </div>
        <div style="height: 25px; background-color: #D3D3D3;">
        </div>
    </header>
    <div id="body">
        <div style="width: 100%">
            <div style="min-height: 40%; float: left; width: 20.5%; padding-left: 5px; padding-top: 2px; padding-bottom: 10px;">
                @Html.Partial("AdminMenu")
            </div>

            <div style="min-height: 40%; border-left: 1px solid #206C9F; width: 77.5%; float: left; padding-left: 10px; padding-top: 2px; padding-bottom: 10px;">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - DSL Accounting Information System</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
