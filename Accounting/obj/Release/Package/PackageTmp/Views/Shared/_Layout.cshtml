    <div id="container">
        <div id="banner">
            <div style="float: left; padding: 2px;">
                @*<img src="images/bond.png" />*@
            </div>
            <div style="float: left;">
                @*<img src="images/software-name.png" />*@
            </div>
        </div>
        <div id="navcontainer">
