            </ul>
            <span style="float: right"></span>
        </div>
        <div id="sidebar">
            @Html.Partial("AdminMenu")
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="footer">
            <div align="center">
                <div>Copyright &copy; 2014 Digicon, Dhaka.</div>
                <div>
                    This System is designed and developed by Deshi Systems Ltd. <a
                        href="http://www.deshisysltd.com/" target="_blank"><strong>(DSL)</strong></a>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </div>



