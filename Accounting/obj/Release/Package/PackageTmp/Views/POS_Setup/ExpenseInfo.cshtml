@model Repository.ExpenseInfo
@{
    ViewBag.Title = "ExpenseInfo";
}

<script src="~/Scripts/ApplicationJS/Pos_Setup/ExpenseInfo.js"></script>

@using (@Html.BeginForm())
{
    <div class="FormName">Expense Info</div>
    <div class="MainDiv">
        <div class="LeftPart">
            @Html.HiddenFor(m => m.ExpenseID)
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.ExpenseCode, "Expense Code")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ExpenseCode, new { @class = "required" })
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.ExpenseName, "Expense Name")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ExpenseName, new { @class = "required" })
                </div>
            </div>

            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.Remarks)
                </div>
                <div>
                    @Html.TextBoxFor(m => m.Remarks, new { @class = "required" })
                </div>
            </div>
            <div class="CustombuttonTwoParts">
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Save" id="btnSave" />
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Update" id="btnUpdate" />
            </div>
            <div>
                <table id="tblExpenseInfo"></table>
                <div id="divExpenseInfoPager"></div>
            </div>
        </div>
    </div>
}
