@model Repository.ProductionConsum
@{
    ViewBag.Title = "ProductionConsum";
}

<script src="~/Scripts/ApplicationJS/Pos_Production/ProductionConsum.js"></script>

@using (@Html.BeginForm())
{
    <div class="FormName">Product Consumption</div>
    <div class="MainDiv">
        <div class="LeftPart">
            @Html.HiddenFor(m => m.ProductionID)
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.ProductCode, "Product Code")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ProductCode, new { @class = "required" })
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.ConsumQty, "Consume Quantity")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.ConsumQty, new { @class = "required" })
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.RatePerUnit, "Rate Per Unit")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.RatePerUnit, new { @class = "required" })
                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.UOM, "Unit Name")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.UOM, new { @class = "required" })
                </div>
            </div>
            <div class="CustombuttonOnePart">
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Save" id="btnSave" />
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Update" id="btnUpdate" />
            </div>
            <div>
                <table id="tblProductionCon"></table>
                <div id="ProductionConPager"></div>
            </div>
        </div>
    </div> 
}

