@model Repository.AdjustmentType
@{
    ViewBag.Title = "AdjustmentType";
}

<script src="~/Scripts/ApplicationJS/POS_Adjustment/AdjustmentType.js"></script>

@using (@Html.BeginForm())
{
    <div class="FormName">Adjustment Type</div>
    <div class="MainDiv">
        <div class="LeftPart">
            @Html.HiddenFor(m => m.AdjustmentTypeID)
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.AdjustmentTypeName, "AdjustmentType Name")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.AdjustmentTypeName, new { @class = "required" })
                </div>
            </div>
            <div class="CustombuttonOnePart">
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Save" id="btnSave" />
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Update" id="btnUpdate" />
            </div>
            <div>
                <table id="tblAdjustmentType"></table>
                <div id="AdjustmentTypePager"></div>
            </div>
        </div>
    </div>  
    
}


