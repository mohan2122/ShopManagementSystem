@model Repository.CountryInfo
@{
    ViewBag.Title = "CountryInfo";
}

<script src="~/Scripts/ApplicationJS/Common/CountryInfo.js"></script>

@using (@Html.BeginForm())
{  
    <div class="FormName">Country Info</div>
    <div class="MainDiv">
        <div class="LeftPart">
            @Html.HiddenFor(m => m.CountryID)
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.CountryCode, "Country Code ")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.CountryCode, new { @class = "required" })

                </div>
            </div>
            <div class="LeftRow">
                <div class="LeftColumn">
                    @Html.LabelFor(m => m.CountryName, "Country Name  ")
                </div>
                <div>
                    @Html.TextBoxFor(m => m.CountryName, new { @class = "required" })
                </div>
            </div>
            <div class="CustombuttonOnePart">
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Save" id="btnSave" />
                <input class="ac-inputs ui-button ui-widget ui-state-default ui-corner-all" type="button" value="Update" id="btnUpdate" />
            </div>

            <div>
                <table id="tblCountryInfo"></table>
                <div id="CountryInfoPager"></div>
            </div>
        </div>
    </div> 
}

